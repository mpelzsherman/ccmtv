= form_for @performance, :url => admin_performances_path do |f|
  -if @performance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@performance.errors.count, "error")} prohibited this admin_performance from being saved:"
      %ul
        - @performance.errors.full_messages.each do |msg|
          %li= msg

  = f.label 'Composer'
  = collection_select(:composer, :person_id, Person.order('canonical_name'), :id, :canonical_name, {}, {:class => "chzn-select"})

  .actions
    = f.submit 'Save'
