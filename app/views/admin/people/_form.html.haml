= form_for @person do |f|
  -if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :composer
    = f.check_box :composer
  .field
    = f.label :performer
    = f.check_box :performer
  .field
    = f.label :date_of_birth
    = f.datetime_select :date_of_birth
  .field
    = f.label :birth_location_id
    = f.number_field :birth_location_id
  .field
    = f.label :death_location_id
    = f.number_field :death_location_id
  .field
    = f.label :canonical_name
    = f.text_field :canonical_name
  .field
    = f.label :date_of_death
    = f.datetime_select :date_of_death
  .actions
    = f.submit 'Save'
