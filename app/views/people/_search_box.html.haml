= simple_form_for @person, :method => :get, :html => {:class => 'form-inline form-search span7' } do |f|
  = f.input_field :canonical_name, :class => 'input-small span3', :placeholder => "enter a person's name"
  = f.hidden_field :person_type, :value => params[:person_type]
  = f.submit 'Search', :class => 'btn btn-small'
