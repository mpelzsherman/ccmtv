!!! 5
%html{:lang => 'en'}
  %head
    %title PianoDB
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
  %body
    %header
      %nav.navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"} PianoDB
            .nav-collapse
              %ul.nav.pull-right
                - if user_signed_in?
                  %li= link_to 'logout', logout_path
                  - if current_user.active?
                    %li= link_to "Performances"
                    %li.dropdown
                      %a.dropdown-toggle{"data-toggle" => 'dropdown'}
                        Compositions
                        %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => admin_compositions_path} View
                        %li
                          %a{:href => new_admin_composition_path} New
                    %li.dropdown
                      %a.dropdown-toggle{"data-toggle" => 'dropdown'}
                        People
                        %b.caret
                      %ul.dropdown-menu
                        %li
                          %a{:href => admin_people_path} View
                        %li
                          %a{:href => new_admin_person_path} New
                - else
                  %li= link_to 'login', login_path
                  %li= link_to 'sign up', new_user_registration_path
              %ul.nav
                %li= link_to "Top 10"
                %li= link_to "Contribute"
    .container
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          %a.close{"data-dismiss" => "alert"} Ã—
          = msg
      .row
        .span9
          .well= yield
        %aside.span3
          .well
